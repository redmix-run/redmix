{
  "name": "@cedarjs/testing",
  "version": "0.0.5",
  "description": "Tools, wrappers and configuration for testing a Cedar project.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cedarjs/cedar.git",
    "directory": "packages/testing"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "config",
    "web",
    "api",
    "cache",
    "dist"
  ],
  "scripts": {
    "build": "tsx ./build.mts && yarn build:types",
    "build:pack": "yarn pack -o cedarjs-testing.tgz",
    "build:types": "tsc --build --verbose ./tsconfig.build.json",
    "build:watch": "nodemon --watch src --ext 'js,jsx,ts,tsx' --ignore dist --exec 'yarn build'",
    "check:attw": "yarn rw-fwtools-attw",
    "check:package": "concurrently npm:check:attw yarn:publint",
    "prepublishOnly": "NODE_ENV=production yarn build",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@cedarjs/auth": "workspace:*",
    "@cedarjs/babel-config": "workspace:*",
    "@cedarjs/context": "workspace:*",
    "@cedarjs/graphql-server": "workspace:*",
    "@cedarjs/project-config": "workspace:*",
    "@cedarjs/router": "workspace:*",
    "@cedarjs/web": "workspace:*",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "14.3.1",
    "@testing-library/user-event": "14.5.2",
    "@types/aws-lambda": "8.10.145",
    "@types/babel-core": "6.25.10",
    "@types/jest": "29.5.14",
    "@types/node": "20.17.10",
    "babel-jest": "^29.7.0",
    "fast-glob": "3.3.2",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-watch-typeahead": "2.2.2",
    "msw": "1.3.4",
    "ts-toolbelt": "9.6.0",
    "whatwg-fetch": "3.6.20"
  },
  "devDependencies": {
    "@cedarjs/framework-tools": "workspace:*",
    "concurrently": "8.2.2",
    "jsdom": "24.1.3",
    "publint": "0.3.11",
    "tsx": "4.19.3",
    "typescript": "5.6.2",
    "vitest": "2.1.9"
  },
  "gitHead": "3905ed045508b861b495f8d5630d76c7a157d8f1"
}
